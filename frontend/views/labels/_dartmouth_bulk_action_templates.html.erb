<div id="dartmouth_bulk_action_print_labels"><!--
  <link href="<%= "#{AppConfig[:frontend_prefix]}assets/container_labels.css" %>" media="all" rel="stylesheet" type="text/css"/>
  <%= form_tag({:controller => :dartmouth_top_containers, :action => :print_labels}, {:class => "form-horizontal", :id => "print_labels_form", :target => "_blank" }) do |f| %>
    <div class="modal-body">
        <div class="alert alert-info" id="alertBucket"><%= I18n.t("dartmouth_top_container._frontend.bulk_operations.print_labels_help") %></div>

        <div class="selected-record-list well">
            <ul>
                {for container in selection}
                <li>
                  ${container.display_string}
                  <input type="hidden" name="record_uris[]" value="${container.uri}">
                </li>
                {/for}
            </ul>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2" for="label_type">
            <%= I18n.t("dartmouth_top_container._frontend.bulk_operations.label_type_label") %>
          </div>
          <div class="controls col-sm-6">
            <select class="form-control" name="label_type">
              <option value="local"><%= I18n.t("dartmouth_top_container._frontend.bulk_operations.label_type_local") %></option>
              <option value="rm"><%= I18n.t("dartmouth_top_container._frontend.bulk_operations.label_type_rm") %></option>
            </select>
          </div>
        </div>

        <div id="labels_to_print"></div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default"><%= I18n.t("dartmouth_top_container._frontend.bulk_operations.print_n_labels", {:n => "${selection.length}"}) %></button>
        <button class="btn btn-cancel btn-default" data-dismiss="modal"><%= I18n.t("actions.cancel") %></button>
    </div>
  <% end %>
--></div>
